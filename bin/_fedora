#!/bin/bash

if [[ ! $(dnf repoquery --installed ansible) ]]; then
  _task "Installing Ansible"
  _cmd "sudo dnf install ansible -y"
  _cmd "sudo dnf install python3-argcomplete -y"
  _cmd "sudo activate-global-python-argcomplete"
fi
if [[ ! $(dnf repoquery --installed python3) ]]; then
  _task "Installing Python3"
  _cmd "sudo dnf install -y python3"
fi
if [[ ! $(dnf repoquery --installed python3-pip) ]]; then
  _task "Installing Python3 Pip"
  _cmd "sudo dnf install -y python3-pip"
fi
if ! pip3 list | grep watchdog >/dev/null 2>&1; then
  _task "Installing Python3 Watchdog"
  _cmd "pip3 install watchdog"
fi

